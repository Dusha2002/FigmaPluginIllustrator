set -euf

MAVEN_PROJECTBASEDIR=$(dirname "$0")
if [ "$MAVEN_PROJECTBASEDIR" = '.' ]; then
  MAVEN_PROJECTBASEDIR=$(pwd)
fi
export MAVEN_PROJECTBASEDIR

WRAPPER_JAR="${MAVEN_PROJECTBASEDIR}/.mvn/wrapper/maven-wrapper.jar"
WRAPPER_PROPERTIES="${MAVEN_PROJECTBASEDIR}/.mvn/wrapper/maven-wrapper.properties"
WRAPPER_LAUNCHER="org.apache.maven.wrapper.MavenWrapperMain"

if [ ! -f "$WRAPPER_PROPERTIES" ]; then
  echo "Cannot find ${WRAPPER_PROPERTIES}" >&2
  exit 1
fi

if [ ! -f "$WRAPPER_JAR" ]; then
  if command -v curl >/dev/null 2>&1; then
    WRAPPER_DL_CMD="curl -fsSL -o"
  elif command -v wget >/dev/null 2>&1; then
    WRAPPER_DL_CMD="wget -q -O"
  else
    echo "Cannot find curl or wget for downloading Maven Wrapper." >&2
    exit 1
  fi
  WRAPPER_URL=$(sed -n 's/^wrapperUrl=//p' "$WRAPPER_PROPERTIES")
  if [ -z "$WRAPPER_URL" ]; then
    echo "wrapperUrl is not set in ${WRAPPER_PROPERTIES}" >&2
    exit 1
  fi
  mkdir -p "$(dirname "$WRAPPER_JAR")"
  echo "Downloading Maven Wrapper from ${WRAPPER_URL}" >&2
  $WRAPPER_DL_CMD "$WRAPPER_JAR" "$WRAPPER_URL"
fi

JAVA_EXEC="${JAVA_HOME:-}/bin/java"
if [ -z "${JAVA_HOME:-}" ] || [ ! -x "$JAVA_EXEC" ]; then
  JAVA_EXEC=$(command -v java || true)
fi

if [ ! -x "$JAVA_EXEC" ]; then
  echo "Java executable not found. Please set JAVA_HOME." >&2
  exit 1
fi

exec "$JAVA_EXEC" -classpath "$WRAPPER_JAR" -Dmaven.multiModuleProjectDirectory="$MAVEN_PROJECTBASEDIR" $WRAPPER_LAUNCHER "$@"
